{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "functions": {
    "api/blog/index.ts": {
      "maxDuration": 30
    },
    "api/blog/[slug].ts": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/blog/:slug",
      "destination": "/api/blog/[slug]"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}

