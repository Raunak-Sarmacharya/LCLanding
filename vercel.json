{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "functions": {
    "api/blog/index.ts": {
      "maxDuration": 30
    },
    "api/blog/[slug].ts": {
      "maxDuration": 30
    },
    "api/newsletter.ts": {
      "maxDuration": 30
    },
    "api/verify-email.ts": {
      "maxDuration": 30
    },
    "api/sitemap.ts": {
      "maxDuration": 10
    }
  },
  "headers": [
    {
      "source": "/robots.txt",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/plain"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        }
      ]
    },
    {
      "source": "/sitemap.xml",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/xml"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600, s-maxage=86400"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/sitemap.xml",
      "destination": "/api/sitemap"
    },
    {
      "source": "/api/blog/:slug",
      "destination": "/api/blog/[slug]"
    },
    {
      "source": "/((?!api|robots.txt|sitemap.xml|.*\\..*).*)",
      "destination": "/index.html"
    }
  ]
}
